---
import Layout from '../layouts/Layout.astro';
import LoginForm from '../components/LoginForm.jsx';
import Balatro from '../components/Balatro.jsx';
---

<Layout title="Login - Project Overlord" shouldPadHeader={false}>
  <div class="relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Background Effect -->
    <div class="absolute inset-0 w-full h-full bg-zinc-950">
      <Balatro
        isRotate={true}
        mouseInteraction={true}
        pixelFilter={700}
        spinSpeed={2.0}
        client:load
      />
    </div>

    <!-- Overlay -->
    <div class="absolute inset-0 bg-gradient-to-b from-zinc-950/50 via-zinc-950/70 to-zinc-950">
    </div>

    <!-- Login Form -->
    <div class="relative z-10 w-full flex justify-center px-4">
      <LoginForm client:load />
    </div>
  </div>
</Layout>
